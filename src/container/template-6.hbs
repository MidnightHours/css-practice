<header class="header">
    <div>
        {{> logo }}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header }}
        </div>
    </nav>
</header>

<main class="main">

    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_imput_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}"
                class="form_input">
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

<section class="updates">
    {{#with updates}}
    <h3 class="updates_title">{{title}}</h3>

    {{#each list}}
    <div class="updates_item">
        <div class="updates_img" style="background-image: url(https://picsum.photos/32/32);"></div>
        <div class="updates_info">
            <div>@{{nickname}}</div>
            <p>{{description}}</p>
        </div>
    </div>
    {{/each}}

    <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
    {{/with}}
</section>

<section class="expirience">
    {{#with expirience}}
    <div>
        <h2 class="expirience_title">{{title}}</h2>
        <div class="expirience_badge">{{badge}}</div>
    </div>
    <div class="expirience_item">
        {{#each list}}
        <div class="expirience_info">
            <div>{{name}}</div>
            <p>{{details}}</p>
        </div>
        {{/each}}
    </div>
    {{/with}}
</section>

<footer class="footer">
    <div>
        {{> logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">
            {{title}}
        </span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>